@model PizzaClassLibrary.Entities.Pizza

<dl class="dl-horizontal">
    <dt>
        @Html.DisplayNameFor(model => model.Nom)
    </dt>

    <dd>
        @Html.DisplayFor(model => model.Nom)
    </dd>
    <dt>
        @Html.DisplayNameFor(model => model.Pate)
    </dt>
    <dd>
        @if (Model.Pate != null)
        {
            @Html.DisplayFor(modelItem => Model.Pate.Nom)
        }
        else
        {
            @Html.Raw("Aucune pate")
        }
    </dd>
    <dt>
        @Html.DisplayNameFor(model => model.Ingredients)
    </dt>
    <dd>
        @if (Model.Ingredients != null)
        {
            foreach (var ingredient in Model.Ingredients)
            {
                @Html.DisplayFor(modelItem => ingredient.Nom)
                <br />
            }
        }
    </dd>
</dl>

