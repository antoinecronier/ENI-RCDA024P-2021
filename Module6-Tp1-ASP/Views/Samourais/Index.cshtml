@model IEnumerable<Module6_Tp1_BO.Entities.Samourai>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Force)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Arme)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ArtMartiaux)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Potentiel)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Force)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Nom)
    </td>
    <td>
        @if (item.Arme != null)
        {
            @Html.DisplayFor(modelItem => item.Arme.Nom)
        }
        else
        {
            <div>Aucune arme</div>
        }
    </td>
    <td>
        @if (item.ArtMartiaux != null && item.ArtMartiaux.Count > 0)
        {
            foreach (var subitem in item.ArtMartiaux)
            {
                @Html.DisplayFor(model => subitem.Nom)
                <br />
            }
        }
        else
        {
            <div>Aucun art martial</div>
        }
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Potentiel)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
    </td>
</tr>
}

</table>
