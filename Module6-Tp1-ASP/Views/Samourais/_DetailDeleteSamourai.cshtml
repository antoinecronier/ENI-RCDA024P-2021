@model Module6_Tp1_BO.Entities.Samourai

<dl class="dl-horizontal">
    <dt>
        @Html.DisplayNameFor(model => model.Force)
    </dt>

    <dd>
        @Html.DisplayFor(model => model.Force)
    </dd>

    <dt>
        @Html.DisplayNameFor(model => model.Nom)
    </dt>

    <dd>
        @Html.DisplayFor(model => model.Nom)
    </dd>

    <dt>
        @Html.DisplayNameFor(model => model.Arme)
    </dt>

    <dd>
        @if (Model.Arme != null)
        {
            @Html.DisplayFor(model => model.Arme.Nom)
        }
        else
        {
            <div>Aucune arme</div>
        }

    </dd>

    <dt>
        @Html.DisplayNameFor(model => model.ArtMartiaux)
    </dt>

    <dd>
        @if (Model.ArtMartiaux != null && Model.ArtMartiaux.Count > 0)
        {
            foreach (var item in Model.ArtMartiaux)
            {
                @Html.DisplayFor(model => item.Nom)
                <br />
            }
        }
        else
        {
            <div>Aucun art martial</div>
        }

    </dd>

    <dt>
        @Html.DisplayNameFor(model => model.Potentiel)
    </dt>

    <dd>
        @Html.DisplayFor(model => model.Potentiel)
    </dd>
</dl>
